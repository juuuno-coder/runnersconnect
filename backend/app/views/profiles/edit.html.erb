<div class="max-w-3xl mx-auto px-6 py-16">
  <div class="mb-10">
    <h1 class="text-4xl font-black text-gray-900 tracking-tighter mb-2">프로필 수정</h1>
    <p class="text-gray-500 font-medium">개인 정보를 업데이트하세요.</p>
  </div>

  <div class="bg-white rounded-[2.5rem] shadow-xl shadow-blue-50 border border-gray-100 p-10">
    <%= form_with(model: @user, url: profile_path, method: :patch, local: true, class: "space-y-6") do |f| %>
      <% if @user.errors.any? %>
        <div class="p-4 bg-red-50 text-red-600 rounded-xl text-sm font-medium">
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, "이름", class: "block text-sm font-bold text-gray-700 mb-2" %>
        <%= f.text_field :name, class: "block w-full px-5 py-4 rounded-2xl border-gray-200 focus:ring-blue-500 focus:border-blue-500 shadow-sm transition-all" %>
      </div>

      <div>
        <%= f.label :email, "이메일", class: "block text-sm font-bold text-gray-700 mb-2" %>
        <%= f.email_field :email, class: "block w-full px-5 py-4 rounded-2xl border-gray-200 focus:ring-blue-500 focus:border-blue-500 shadow-sm transition-all bg-gray-50", readonly: true %>
        <p class="text-xs text-gray-400 mt-1">이메일은 변경할 수 없습니다.</p>
      </div>

      <div>
        <%= f.label :phone_number, "연락처", class: "block text-sm font-bold text-gray-700 mb-2" %>
        <%= f.text_field :phone_number, placeholder: "010-1234-5678", class: "block w-full px-5 py-4 rounded-2xl border-gray-200 focus:ring-blue-500 focus:border-blue-500 shadow-sm transition-all" %>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :birth_date, "생년월일", class: "block text-sm font-bold text-gray-700 mb-2" %>
          <%= f.date_field :birth_date, class: "block w-full px-5 py-4 rounded-2xl border-gray-200 focus:ring-blue-500 focus:border-blue-500 shadow-sm transition-all" %>
        </div>
        <div>
          <%= f.label :gender, "성별", class: "block text-sm font-bold text-gray-700 mb-2" %>
          <%= f.select :gender, [['남성', 'male'], ['여성', 'female'], ['기타', 'other']], { prompt: "선택하세요" }, class: "block w-full px-5 py-4 rounded-2xl border-gray-200 focus:ring-blue-500 focus:border-blue-500 shadow-sm transition-all" %>
        </div>
      </div>

      <div class="pt-6 border-t border-gray-100">
        <h3 class="text-lg font-black text-gray-900 mb-4">배송지 정보</h3>
        
        <div class="mb-4" data-controller="postal-code">
          <div class="grid grid-cols-3 gap-3">
            <div>
              <%= f.label :address_zipcode, "우편번호", class: "block text-sm font-bold text-gray-700 mb-2" %>
              <%= f.text_field :address_zipcode, placeholder: "12345", data: { postal_code_target: "zipcode" }, class: "block w-full px-5 py-4 rounded-2xl border-gray-200 focus:ring-blue-500 focus:border-blue-500 shadow-sm transition-all" %>
            </div>
            <div class="col-span-2 flex items-end">
              <button type="button" data-action="click->postal-code#search" class="w-full py-4 bg-gray-100 hover:bg-gray-200 text-gray-700 font-bold rounded-2xl transition-all">
                우편번호 찾기
              </button>
            </div>
          </div>
        </div>

        <div class="mb-4">
          <%= f.label :address_basic, "기본 주소", class: "block text-sm font-bold text-gray-700 mb-2" %>
          <%= f.text_field :address_basic, placeholder: "서울시 강남구 테헤란로 123", data: { postal_code_target: "address" }, class: "block w-full px-5 py-4 rounded-2xl border-gray-200 focus:ring-blue-500 focus:border-blue-500 shadow-sm transition-all" %>
        </div>

        <div>
          <%= f.label :address_detail, "상세 주소", class: "block text-sm font-bold text-gray-700 mb-2" %>
          <%= f.text_field :address_detail, placeholder: "4층 러너스 커넥트", class: "block w-full px-5 py-4 rounded-2xl border-gray-200 focus:ring-blue-500 focus:border-blue-500 shadow-sm transition-all" %>
        </div>
      </div>

      <div class="flex items-center justify-between pt-8">
        <%= link_to "취소", profile_path, class: "px-8 py-4 bg-gray-100 hover:bg-gray-200 text-gray-700 font-bold rounded-2xl transition-all" %>
        <%= f.submit "저장하기", class: "px-8 py-4 bg-blue-600 hover:bg-blue-700 text-white font-black rounded-2xl shadow-xl shadow-blue-100 transition-all active:scale-[0.98]" %>
      </div>
    <% end %>
  </div>
</div>
