<div class="max-w-3xl mx-auto space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-black text-gray-900">새 상품 등록</h1>
      <p class="text-gray-500 font-medium mt-2"><%= @race.title %></p>
    </div>
    <%= link_to "← 상품 목록", organizer_race_products_path(@race), class: "text-sm font-bold text-gray-600 hover:text-gray-900" %>
  </div>

  <div class="bg-white rounded-2xl border border-gray-200 shadow-sm p-8">
    <%= form_with model: @product, url: organizer_race_products_path(@race), method: :post, class: "space-y-6" do |f| %>
      <!-- 상품명 -->
      <div>
        <%= f.label :name, '상품명', class: 'block text-sm font-bold text-gray-700 mb-2' %>
        <%= f.text_field :name, required: true, placeholder: 'ex) 2026 서울마라톤 기념 티셔츠', class: 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent' %>
      </div>

      <!-- 설명 -->
      <div>
        <%= f.label :description, '상품 설명', class: 'block text-sm font-bold text-gray-700 mb-2' %>
        <%= f.text_area :description, rows: 4, placeholder: '상품에 대한 자세한 설명을 입력하세요', class: 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent' %>
      </div>

      <!-- 가격 및 재고 -->
      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :price, '가격 (원)', class: 'block text-sm font-bold text-gray-700 mb-2' %>
          <%= f.number_field :price, required: true, min: 0, step: 1000, placeholder: '20000', class: 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent' %>
        </div>

        <div>
          <%= f.label :stock, '재고 수량', class: 'block text-sm font-bold text-gray-700 mb-2' %>
          <%= f.number_field :stock, required: true, min: 0, placeholder: '100', class: 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent' %>
        </div>
      </div>

      <!-- 옵션 -->
      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :size, '사이즈', class: 'block text-sm font-bold text-gray-700 mb-2' %>
          <%= f.text_field :size, placeholder: 'ex) L, XL', class: 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent' %>
        </div>

        <div>
          <%= f.label :color, '색상', class: 'block text-sm font-bold text-gray-700 mb-2' %>
          <%= f.text_field :color, placeholder: 'ex) 블랙, 화이트', class: 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent' %>
        </div>
      </div>

      <!-- 상태 -->
      <div>
        <%= f.label :status, '판매 상태', class: 'block text-sm font-bold text-gray-700 mb-2' %>
        <%= f.select :status, [['판매중', 'active'], ['비활성', 'inactive'], ['품절', 'sold_out']], {}, class: 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent' %>
      </div>

      <!-- 이미지 -->
      <div>
        <%= f.label :images, '상품 이미지', class: 'block text-sm font-bold text-gray-700 mb-2' %>
        <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-indigo-400 transition-colors">
          <div class="space-y-1 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <div class="flex text-sm text-gray-600">
              <label for="product_images" class="relative cursor-pointer bg-white rounded-md font-medium text-indigo-600 hover:text-indigo-500">
                <span>이미지 선택</span>
                <%= f.file_field :images, multiple: true, accept: 'image/*', class: 'sr-only', id: 'product_images' %>
              </label>
              <p class="pl-1">또는 드래그 앤 드롭</p>
            </div>
            <p class="text-xs text-gray-500">PNG, JPG, GIF (최대 5MB)</p>
          </div>
        </div>
      </div>

      <!-- 버튼 -->
      <div class="flex items-center justify-end gap-3 pt-4 border-t border-gray-200">
        <%= link_to '취소', organizer_race_products_path(@race), class: 'px-6 py-3 border-2 border-gray-300 text-gray-700 font-bold rounded-lg hover:bg-gray-50 transition-colors' %>
        <%= f.submit '상품 등록', class: 'px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-bold rounded-lg transition-colors' %>
      </div>
    <% end %>
  </div>
</div>
