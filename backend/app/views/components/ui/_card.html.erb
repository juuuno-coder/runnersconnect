<div class="<%= tw("rounded-2xl border bg-card text-card-foreground shadow-sm w-full transition-all duration-200 hover:shadow-md hover:border-border/60", options[:class]) %>">
  <% if title || subtitle %>
  <div class="flex flex-col space-y-1.5 p-6">
    <% if title %>
    <h3 class="text-2xl font-semibold leading-none tracking-tight"><%= title %></h3>
    <% end %> <% if subtitle %>
    <p class="text-sm text-muted-foreground"><%= subtitle %></p>
    <% end %>
  </div>
  <% end %>
  <% if !block && !title %>
    <%= content_tag( :div, class: "p-6" ){ body } %>
  <% elsif !block %>
    <%= content_tag( :div, class: "px-6" ){ body } %>
  <% else %>
    <%= body %>
  <% end %>
  <% if footer %><footer class="mx-6 mb-6"><%= footer %></footer><% end %>
</div>
