<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <!-- 헤더 -->
    <div class="mb-12">
      <div class="flex items-center justify-between mb-6">
        <div>
          <%= link_to race_path(@race), class: "inline-flex items-center text-sm font-bold text-gray-500 hover:text-gray-700 mb-2" do %>
            <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            <%= @race.title %> 대회 정보로 돌아가기
          <% end %>
          <h1 class="text-4xl font-black text-gray-900 mb-2">🛍️ 대회 굿즈 스토어</h1>
          <p class="text-lg text-gray-600">대회 참가 기념품과 러닝 용품을 만나보세요</p>
        </div>
      </div>

      <!-- 상품 개수 표시 -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-4">
        <p class="text-sm text-gray-600">
          <span class="font-bold text-blue-600"><%= @products.count %></span>개의 상품이 있습니다
        </p>
      </div>
    </div>

    <!-- 상품이 없을 때 -->
    <% if @products.empty? %>
      <div class="bg-white rounded-3xl shadow-sm border border-gray-200 p-16 text-center">
        <div class="text-6xl mb-4">🏃‍♀️</div>
        <h3 class="text-2xl font-black text-gray-900 mb-2">준비 중입니다</h3>
        <p class="text-gray-600">곧 멋진 상품들을 만나보실 수 있어요!</p>
        <%= link_to "대회 정보 보기", race_path(@race), class: "inline-block mt-6 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-xl transition-all" %>
      </div>
    <% else %>
      <!-- 상품 그리드 -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <% @products.each do |product| %>
          <%= link_to product_path(product), class: "group" do %>
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden transition-all hover:shadow-xl hover:scale-105 h-full flex flex-col">
              <!-- 상품 이미지 -->
              <div class="aspect-square bg-gradient-to-br from-blue-50 to-purple-50 relative overflow-hidden">
                <% if product.images.attached? %>
                  <%= image_tag product.images.first, class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-300" %>
                <% else %>
                  <div class="w-full h-full flex items-center justify-center">
                    <div class="text-center">
                      <div class="text-6xl mb-2">🎽</div>
                      <p class="text-sm text-gray-400 font-bold">이미지 준비 중</p>
                    </div>
                  </div>
                <% end %>

                <!-- 재고 뱃지 -->
                <% if product.stock < 10 %>
                  <div class="absolute top-3 right-3">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-red-500 text-white shadow-lg">
                      ⚠️ 재고 <%= product.stock %>개
                    </span>
                  </div>
                <% end %>
              </div>

              <!-- 상품 정보 -->
              <div class="p-6 flex-1 flex flex-col">
                <h3 class="text-lg font-black text-gray-900 mb-2 line-clamp-2 group-hover:text-blue-600 transition-colors">
                  <%= product.name %>
                </h3>

                <% if product.description.present? %>
                  <p class="text-sm text-gray-600 mb-4 line-clamp-2 flex-1">
                    <%= product.description %>
                  </p>
                <% end %>

                <!-- 옵션 표시 -->
                <div class="flex items-center gap-2 mb-4 flex-wrap">
                  <% if product.size.present? %>
                    <span class="inline-flex items-center px-2 py-1 rounded-lg text-xs font-bold bg-gray-100 text-gray-700">
                      📏 <%= product.size %>
                    </span>
                  <% end %>
                  <% if product.color.present? %>
                    <span class="inline-flex items-center px-2 py-1 rounded-lg text-xs font-bold bg-gray-100 text-gray-700">
                      🎨 <%= product.color %>
                    </span>
                  <% end %>
                </div>

                <!-- 가격 -->
                <div class="flex items-center justify-between pt-4 border-t border-gray-100 mt-auto">
                  <div>
                    <p class="text-2xl font-black text-blue-600">
                      <%= number_to_currency(product.price, precision: 0) %>
                    </p>
                  </div>
                  <div class="px-4 py-2 bg-blue-600 text-white font-bold rounded-lg group-hover:bg-blue-700 transition-colors text-sm">
                    자세히 보기 →
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>

    <!-- 대회 정보로 돌아가기 -->
    <div class="mt-12 text-center">
      <%= link_to race_path(@race), class: "inline-flex items-center px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-900 font-bold rounded-xl transition-all" do %>
        <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        대회 정보로 돌아가기
      <% end %>
    </div>
  </div>
</div>
