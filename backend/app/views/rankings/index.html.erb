<div class="max-w-6xl mx-auto px-6 py-16">
  <% content_for :header_actions do %>
    <%= render_button "대회 도전하기", as: :link, href: races_path, class: "h-10 px-6 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-xl shadow-lg shadow-blue-50 transition-all active:scale-95 border-none text-sm" do %>
      대회 도전하기
      <svg class="w-4 h-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7l5 5m0 0l-5 5m5-5H6" /></svg>
    <% end %>
  <% end %>

  <%= render 'shared/page_header', 
      title: "Hall of Fame", 
      icon: "🏆", 
      description: "이번 달 가장 뜨겁게 달린 러너들을 소개합니다." %>

  <% if @rankings.any? %>
    <!-- Top 3 Podium -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12 items-end mt-12">
      <!-- 2nd Place -->
      <% if @rankings[1] %>
        <div class="order-2 md:order-1">
          <%= render_card class: "bg-gray-50 border-gray-100 rounded-2xl p-6 text-center transform hover:-translate-y-1 transition-all h-auto py-8 md:py-0 md:h-[240px] flex flex-col justify-center" do %>
            <div class="text-3xl mb-3">🥈</div>
            <div class="w-16 h-16 rounded-full bg-white mx-auto mb-3 border-2 border-gray-200 shadow-sm overflow-hidden">
               <div class="w-full h-full flex items-center justify-center text-gray-400 font-bold text-lg"><%= @rankings[1][:name][0] %></div>
            </div>
            <h3 class="font-bold text-gray-900"><%= @rankings[1][:name] %></h3>
            <p class="text-xs text-blue-600 font-bold"><%= @rankings[1][:distance] %></p>
          <% end %>
        </div>
      <% end %>

      <!-- 1st Place -->
      <% if @rankings[0] %>
        <div class="order-1 md:order-2">
          <%= render_card class: "bg-white border-blue-100 rounded-2xl p-8 text-center shadow-xl shadow-blue-50 transform hover:-translate-y-2 transition-all h-auto py-10 md:py-0 md:h-[300px] flex flex-col justify-center relative ring-2 ring-blue-50" do %>
            <div class="absolute -top-4 left-1/2 -translate-x-1/2 text-4xl">👑</div>
            <div class="text-4xl mb-4">🥇</div>
            <div class="w-20 h-20 rounded-full bg-blue-100 mx-auto mb-4 border-4 border-white shadow-md overflow-hidden ring-2 ring-blue-500/20">
               <div class="w-full h-full flex items-center justify-center text-blue-600 font-black text-xl"><%= @rankings[0][:name][0] %></div>
            </div>
            <h3 class="text-xl font-black text-gray-900"><%= @rankings[0][:name] %></h3>
            <p class="text-sm text-blue-600 font-black"><%= @rankings[0][:distance] %></p>
          <% end %>
        </div>
      <% end %>

      <!-- 3rd Place -->
      <% if @rankings[2] %>
        <div class="order-3">
          <%= render_card class: "bg-gray-50 border-gray-100 rounded-2xl p-6 text-center transform hover:-translate-y-1 transition-all h-auto py-8 md:py-0 md:h-[220px] flex flex-col justify-center" do %>
            <div class="text-2xl mb-3">🥉</div>
            <div class="w-14 h-14 rounded-full bg-white mx-auto mb-3 border-2 border-orange-100 shadow-sm overflow-hidden">
               <div class="w-full h-full flex items-center justify-center text-orange-400 font-bold text-lg"><%= @rankings[2][:name][0] %></div>
            </div>
            <h3 class="font-bold text-gray-900"><%= @rankings[2][:name] %></h3>
            <p class="text-xs text-blue-600 font-bold"><%= @rankings[2][:distance] %></p>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Leaderboard Table -->
    <% if @rankings.size > 3 %>
      <%= render_card class: "rounded-2xl border-gray-100 shadow-sm overflow-hidden p-0" do %>
        <div class="p-6 border-b border-gray-50 bg-gray-50/50 flex justify-between items-center">
          <h2 class="text-lg font-bold text-gray-900">전체 랭킹</h2>
          <span class="text-[10px] font-bold text-gray-400 uppercase tracking-widest">Live Leaderboard</span>
        </div>
        
        <div class="overflow-x-auto">
          <%= render_table class: "border-none" do %>
            <%= table_head class: "bg-white" do %>
              <%= table_header "순위", class: "w-20 text-center text-xs text-gray-400" %>
              <%= table_header "러너", class: "text-xs text-gray-400" %>
              <%= table_header "누적 거리", class: "text-right text-xs text-gray-400" %>
              <%= table_header "페이스", class: "text-right text-xs text-gray-400 pr-8" %>
            <% end %>
            
            <%= table_body do %>
              <% @rankings[3..-1].each_with_index do |runner, index| %>
                <%= table_row class: "group" do %>
                  <%= table_column class: "text-center" do %>
                    <span class="text-sm font-bold text-gray-400 group-hover:text-blue-600 transition-colors">
                      <%= index + 4 %>
                    </span>
                  <% end %>
                  <%= table_column do %>
                    <div class="flex items-center space-x-3">
                      <div class="w-8 h-8 bg-gray-100 rounded-lg flex items-center justify-center text-gray-400 font-bold text-xs border border-gray-200">
                        <%= runner[:name][0] %>
                      </div>
                      <div>
                        <p class="font-bold text-gray-900 text-sm"><%= runner[:name] %></p>
                        <p class="text-[10px] text-gray-400 font-medium"><%= runner[:count] %> Activities</p>
                      </div>
                    </div>
                  <% end %>
                  <%= table_column runner[:distance], class: "text-right font-bold text-blue-600" %>
                  <%= table_column class: "text-right pr-8" do %>
                    <span class="text-xs font-bold text-gray-900 bg-gray-50 px-2 py-1 rounded-md"><%= runner[:pace] %>/km</span>
                  <% end %>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    <% end %>

  <% else %>
    <div class="py-32 text-center bg-gray-50 rounded-2xl border border-dashed border-gray-200 mt-8">
      <div class="w-20 h-20 bg-white rounded-2xl flex items-center justify-center mx-auto mb-6 text-gray-200 shadow-sm">
         <svg class="w-10 h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
      </div>
      <h3 class="text-xl font-bold text-gray-900 mb-2">아직 랭킹 데이터가 없습니다</h3>
      <p class="text-gray-500 text-sm font-medium">첫 번째로 순위에 이름을 올려보세요!</p>
    </div>
  <% end %>

  <!-- Bottom CTA -->
  <div class="mt-16">
    <%= render_card class: "p-10 bg-blue-600 border-none rounded-2xl text-white shadow-xl shadow-blue-50" do %>
      <div class="flex flex-col md:flex-row items-center justify-between gap-6 text-center md:text-left">
        <div>
          <h3 class="text-2xl font-black mb-2 tracking-tighter">아직 랭킹에 없으신가요?</h3>
          <p class="text-blue-100 font-medium opacity-80 underline underline-offset-4 decoration-blue-400">지금 바로 대회를 신청하고 순위에 도전해보세요!</p>
        </div>
        <%= render_button "참가 가능한 대회 보러가기", as: :link, href: races_path, class: "px-8 h-12 bg-white text-blue-600 font-bold rounded-xl hover:bg-gray-50 shadow-lg border-none" %>
      </div>
    <% end %>
  </div>
</div>
