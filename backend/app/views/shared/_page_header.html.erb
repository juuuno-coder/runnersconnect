<%# 
  Standard Page Header Component
  Args:
    title: String (Required)
    description: String (Optional)
    icon: String/Emoji (Optional)
    centered: Boolean (Optional, default: false)
    actions: Block (Optional, for buttons like 'New Crew')
%>

<div class="mb-12 <%= local_assigns[:centered] ? 'text-center' : '' %>">
  <div class="flex flex-col md:flex-row <%= local_assigns[:centered] ? 'items-center justify-center' : 'md:items-end justify-between' %> gap-6">
    <div class="<%= local_assigns[:centered] ? 'max-w-2xl' : '' %>">
      <h1 class="text-3xl md:text-4xl font-black text-gray-900 tracking-tight mb-3 flex items-center <%= local_assigns[:centered] ? 'justify-center' : '' %>">
        <%= title %>
        <% if local_assigns[:icon] %>
          <span class="ml-3"><%= icon %></span>
        <% end %>
      </h1>
      <% if local_assigns[:description] %>
        <p class="text-gray-500 text-base font-medium leading-relaxed">
          <%= description %>
        </p>
      <% end %>
    </div>

    <% if content_for?(:header_actions) %>
      <div class="flex items-center space-x-3">
        <%= yield :header_actions %>
      </div>
    <% end %>
  </div>
</div>
