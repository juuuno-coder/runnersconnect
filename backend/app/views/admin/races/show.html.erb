<div class="max-w-6xl mx-auto px-6 py-16">
  <div class="mb-8">
    <%= link_to admin_races_path, class: "inline-flex items-center text-sm font-bold text-gray-500 hover:text-gray-700 mb-4" do %>
      <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
      대회 관리로 돌아가기
    <% end %>

    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-black text-gray-900 mb-2"><%= @race.title %></h1>
        <div class="flex items-center space-x-4 text-sm text-gray-500 font-medium">
          <span><%= @race.location %></span>
          <span>•</span>
          <span><%= @race.start_at&.strftime("%Y년 %m월 %d일") %></span>
        </div>
      </div>
      <%= link_to "수정", edit_admin_race_path(@race), class: "inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-black rounded-xl transition-all" %>
    </div>
  </div>

  <div class="grid lg:grid-cols-3 gap-6">
    <!-- Main Info -->
    <div class="lg:col-span-2 space-y-6">
      <div class="bg-white rounded-[2.5rem] shadow-sm border border-gray-100 p-8">
        <h2 class="text-xl font-black text-gray-900 mb-6">대회 정보</h2>
        <dl class="space-y-4">
          <div>
            <dt class="text-sm font-bold text-gray-500 mb-1">대회 설명</dt>
            <dd class="text-gray-900"><%= @race.description || "설명 없음" %></dd>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <dt class="text-sm font-bold text-gray-500 mb-1">주최</dt>
              <dd class="text-gray-900"><%= @race.organizer_name || "-" %></dd>
            </div>
            <div>
              <dt class="text-sm font-bold text-gray-500 mb-1">공식 웹사이트</dt>
              <dd class="text-gray-900">
                <% if @race.official_site_url.present? %>
                  <%= link_to @race.official_site_url, @race.official_site_url, target: "_blank", class: "text-blue-600 hover:underline" %>
                <% else %>
                  -
                <% end %>
              </dd>
            </div>
          </div>
          <div>
            <dt class="text-sm font-bold text-gray-500 mb-1">공인 기록 대회</dt>
            <dd class="text-gray-900"><%= @race.is_official_record ? "예" : "아니오" %></dd>
          </div>
        </dl>
      </div>

      <!-- Race Editions -->
      <div class="bg-white rounded-[2.5rem] shadow-sm border border-gray-100 p-8">
        <h2 class="text-xl font-black text-gray-900 mb-6">등록 종목</h2>
        <div class="space-y-4">
          <% @editions.each do |edition| %>
            <div class="bg-gray-50 rounded-2xl p-6">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-black text-gray-900"><%= edition.name %></h3>
                <span class="text-sm font-mono text-gray-500"><%= edition.distance %> km</span>
              </div>
              <div class="grid grid-cols-3 gap-4 text-sm">
                <div>
                  <p class="text-gray-500 font-bold mb-1">참가비</p>
                  <p class="text-gray-900 font-black"><%= number_to_currency(edition.price, unit: '₩', precision: 0) %></p>
                </div>
                <div>
                  <p class="text-gray-500 font-bold mb-1">정원</p>
                  <p class="text-gray-900 font-black"><%= edition.capacity %> 명</p>
                </div>
                <div>
                  <p class="text-gray-500 font-bold mb-1">현재 신청</p>
                  <p class="text-gray-900 font-black"><%= edition.current_count %> 명</p>
                </div>
              </div>
              <% if edition.age_limit_min || edition.age_limit_max %>
                <div class="mt-4 pt-4 border-t border-gray-200">
                  <p class="text-sm text-gray-500">
                    연령 제한: <%= edition.age_limit_min || "제한없음" %> ~ <%= edition.age_limit_max || "제한없음" %>세
                  </p>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <div class="bg-white rounded-[2.5rem] shadow-sm border border-gray-100 p-6">
        <h3 class="text-sm font-black text-gray-500 uppercase tracking-widest mb-4">상태</h3>
        <% status_class = case @race.status
          when 'draft' then 'bg-gray-100 text-gray-600'
          when 'open' then 'bg-green-100 text-green-600'
          when 'closed' then 'bg-red-100 text-red-600'
          when 'finished' then 'bg-blue-100 text-blue-600'
          end %>
        <span class="inline-block px-4 py-2 <%= status_class %> rounded-full text-sm font-black">
          <%= @race.status.upcase %>
        </span>
      </div>

      <div class="bg-white rounded-[2.5rem] shadow-sm border border-gray-100 p-6">
        <h3 class="text-sm font-black text-gray-500 uppercase tracking-widest mb-4">일정</h3>
        <dl class="space-y-3 text-sm">
          <div>
            <dt class="text-gray-500 font-bold mb-1">대회 개최일</dt>
            <dd class="text-gray-900 font-black"><%= @race.start_at&.strftime("%Y년 %m월 %d일 %H:%M") %></dd>
          </div>
          <div>
            <dt class="text-gray-500 font-bold mb-1">접수 기간</dt>
            <dd class="text-gray-900">
              <% if @race.registration_start_at && @race.registration_end_at %>
                <%= @race.registration_start_at.strftime("%m/%d %H:%M") %><br>
                ~ <%= @race.registration_end_at.strftime("%m/%d %H:%M") %>
              <% else %>
                미설정
              <% end %>
            </dd>
          </div>
          <div>
            <dt class="text-gray-500 font-bold mb-1">환불 마감</dt>
            <dd class="text-gray-900"><%= @race.refund_deadline&.strftime("%m/%d %H:%M") || "미설정" %></dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</div>
