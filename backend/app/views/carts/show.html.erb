<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <!-- 헤더 -->
    <div class="mb-12">
      <h1 class="text-4xl font-black text-gray-900 mb-2">🛒 장바구니</h1>
      <p class="text-lg text-gray-600">주문하실 상품을 확인해주세요</p>
    </div>

    <% if @cart.empty? %>
      <!-- 빈 장바구니 -->
      <div class="bg-white rounded-3xl shadow-sm border border-gray-200 p-16 text-center">
        <div class="text-6xl mb-4">🛒</div>
        <h3 class="text-2xl font-black text-gray-900 mb-2">장바구니가 비어있습니다</h3>
        <p class="text-gray-600 mb-6">마음에 드는 상품을 담아보세요!</p>
        <%= link_to "쇼핑 계속하기", races_path, class: "inline-block px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-xl transition-all" %>
      </div>
    <% else %>
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- 왼쪽: 장바구니 상품 목록 -->
        <div class="lg:col-span-2 space-y-4" data-controller="cart">
          <% @cart_items.each do |item| %>
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
              <div class="flex gap-6">
                <!-- 상품 이미지 -->
                <div class="w-32 h-32 bg-gradient-to-br from-blue-50 to-purple-50 rounded-xl overflow-hidden flex-shrink-0">
                  <% if item.product.images.attached? %>
                    <%= image_tag item.product.images.first, class: "w-full h-full object-cover" %>
                  <% else %>
                    <div class="w-full h-full flex items-center justify-center">
                      <div class="text-4xl">🎽</div>
                    </div>
                  <% end %>
                </div>

                <!-- 상품 정보 -->
                <div class="flex-1">
                  <div class="flex items-start justify-between mb-2">
                    <div>
                      <%= link_to product_path(item.product), class: "hover:text-blue-600 transition-colors" do %>
                        <h3 class="text-lg font-black text-gray-900 mb-1"><%= item.product.name %></h3>
                      <% end %>
                      <p class="text-sm text-gray-500">
                        <%= item.product.race.title %>
                      </p>
                      <% if item.product.size.present? || item.product.color.present? %>
                        <div class="flex items-center gap-2 mt-2">
                          <% if item.product.size.present? %>
                            <span class="text-xs px-2 py-1 bg-gray-100 rounded-lg font-bold text-gray-700">
                              📏 <%= item.product.size %>
                            </span>
                          <% end %>
                          <% if item.product.color.present? %>
                            <span class="text-xs px-2 py-1 bg-gray-100 rounded-lg font-bold text-gray-700">
                              🎨 <%= item.product.color %>
                            </span>
                          <% end %>
                        </div>
                      <% end %>
                    </div>

                    <!-- 삭제 버튼 -->
                    <%= button_to remove_item_cart_path(product_id: item.product.id),
                        method: :delete,
                        data: { turbo_confirm: '이 상품을 장바구니에서 삭제하시겠습니까?' },
                        class: "text-red-500 hover:text-red-700 transition-colors" do %>
                      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                      </svg>
                    <% end %>
                  </div>

                  <!-- 가격 및 수량 -->
                  <div class="flex items-center justify-between mt-4">
                    <!-- 수량 선택 -->
                    <div class="flex items-center gap-2">
                      <%= button_to update_quantity_cart_path(product_id: item.product.id, quantity: item.quantity - 1),
                          method: :patch,
                          data: {
                            turbo: false,
                            action: "click->cart#updateQuantity"
                          },
                          class: "w-8 h-8 bg-gray-100 hover:bg-gray-200 rounded-lg font-bold transition-colors flex items-center justify-center" do %>
                        -
                      <% end %>
                      <span class="w-12 text-center font-bold text-lg" data-cart-target="quantity">
                        <%= item.quantity %>
                      </span>
                      <%= button_to update_quantity_cart_path(product_id: item.product.id, quantity: item.quantity + 1),
                          method: :patch,
                          data: {
                            turbo: false,
                            action: "click->cart#updateQuantity",
                            max: item.product.stock
                          },
                          class: "w-8 h-8 bg-gray-100 hover:bg-gray-200 rounded-lg font-bold transition-colors flex items-center justify-center" do %>
                        +
                      <% end %>
                    </div>

                    <!-- 소계 -->
                    <div class="text-right">
                      <p class="text-xs text-gray-500 mb-1">
                        <%= number_to_currency(item.unit_price, precision: 0) %> × <%= item.quantity %>
                      </p>
                      <p class="text-2xl font-black text-blue-600">
                        <%= number_to_currency(item.subtotal, precision: 0) %>
                      </p>
                    </div>
                  </div>

                  <!-- 재고 경고 -->
                  <% if item.product.stock < 10 %>
                    <div class="mt-3 bg-yellow-50 border-l-4 border-yellow-400 p-3 rounded">
                      <p class="text-sm text-yellow-800">
                        ⚠️ 재고가 얼마 남지 않았습니다 (<%= item.product.stock %>개)
                      </p>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>

          <!-- 장바구니 비우기 -->
          <div class="text-center pt-4">
            <%= button_to "장바구니 비우기", clear_cart_path,
                method: :delete,
                data: { turbo_confirm: '장바구니의 모든 상품을 삭제하시겠습니까?' },
                class: "text-sm text-red-500 hover:text-red-700 font-bold transition-colors" %>
          </div>
        </div>

        <!-- 오른쪽: 주문 요약 -->
        <div class="lg:col-span-1">
          <div class="bg-white rounded-2xl shadow-xl border border-gray-200 p-8 sticky top-24">
            <h3 class="text-xl font-black text-gray-900 mb-6">주문 요약</h3>

            <!-- 상품 개수 -->
            <div class="flex justify-between items-center mb-4 pb-4 border-b border-gray-100">
              <span class="text-sm font-bold text-gray-600">상품 개수</span>
              <span class="font-bold text-gray-900"><%= @cart.total_items %>개</span>
            </div>

            <!-- 상품 금액 -->
            <div class="flex justify-between items-center mb-4">
              <span class="text-sm font-bold text-gray-600">상품 금액</span>
              <span class="font-bold text-gray-900">
                <%= number_to_currency(@cart.total_amount, precision: 0) %>
              </span>
            </div>

            <!-- 배송비 (향후 구현) -->
            <div class="flex justify-between items-center mb-6 pb-6 border-b border-gray-200">
              <span class="text-sm font-bold text-gray-600">배송비</span>
              <span class="font-bold text-green-600">무료</span>
            </div>

            <!-- 총 결제 금액 -->
            <div class="flex justify-between items-center mb-8 p-4 bg-blue-50 rounded-xl">
              <span class="text-lg font-black text-gray-900">총 결제 금액</span>
              <span class="text-3xl font-black text-blue-600">
                <%= number_to_currency(@cart.total_amount, precision: 0) %>
              </span>
            </div>

            <!-- 주문하기 버튼 -->
            <%= link_to new_order_path, class: "block w-full py-4 bg-blue-600 hover:bg-blue-700 text-white font-black rounded-xl transition-all text-center text-lg shadow-lg mb-3" do %>
              💳 주문하기
            <% end %>

            <%= link_to races_path, class: "block w-full py-3 bg-gray-100 hover:bg-gray-200 text-gray-900 font-bold rounded-xl transition-all text-center" do %>
              쇼핑 계속하기
            <% end %>

            <!-- 안내 사항 -->
            <div class="mt-6 p-4 bg-gray-50 rounded-xl">
              <p class="text-xs text-gray-600 leading-relaxed">
                💡 <strong>안내</strong><br>
                • 재고 부족 시 주문이 취소될 수 있습니다<br>
                • 배송은 결제 후 2-3일 소요됩니다<br>
                • 대회 당일 현장 수령도 가능합니다
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
